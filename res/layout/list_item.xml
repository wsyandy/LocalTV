<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/tab_focus_colors">
	<ImageView android:id="@+id/list_icon" android:src="@drawable/tv_icon"
		android:contentDescription="@string/app_name" android:scaleType="fitCenter"
		android:layout_width="72dp" android:layout_height="36dp"
		android:layout_gravity="left" android:layout_marginLeft="4dp"
		android:padding="2dp" />
	<TextView android:id="@+id/list_name" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:textSize="20sp"
		android:textColor="#000000" android:gravity="center|left"
		android:layout_weight="0.5"
		android:layout_marginLeft="8dp" android:singleLine="true" />
	<TextView android:id="@+id/list_url" android:layout_width="0dp"
		android:layout_height="0dp" />
	<ImageView android:id="@+id/stream_typ" android:src="@drawable/flash"
		android:contentDescription="Stream Typ" android:layout_width="24dp"
		android:layout_height="24dp" android:layout_gravity="center|right" />
</LinearLayout>